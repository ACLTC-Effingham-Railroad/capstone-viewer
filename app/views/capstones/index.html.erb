<%= link_to "Add new brand", "/capstones/new", class: "btn btn-default navbar-right" %>

<table class="table table-hover">
 <thead>
   <tr>
     <th>capstone ID</th>
     <th>capstone Name</th>
     <th>Total Locations</th>
     <th>Updated at</th>
     <th>Created at</th>
     <th>View</th> 
     <th>Edit</th>
     <th>Delete</th>  
   </tr>
 </thead>
<% @capstones.each do |capstone| %>
 <tbody>
   <tr>
     <td><%= capstone.id %></td>
     <td><%= capstone.name %></td>
     <td><%= capstone.description %></td>
     <td><%= capstone.url %></td>
     <td><%= capstone.screenshot %></td>
     <td>
       <%= link_to "View", "/capstones/#{capstone.id}/locations", class: "btn btn-default" %>
     </td>
     <td>
       <%= link_to "Edit", "/capstones/#{capstone.id}/edit", class: "btn btn-info" %>
     </td> 
     <td>
       <%= link_to "Delete", "/capstones/#{capstone.id}", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}  %>
     </td>  
   </tr>
 </tbody>
<% end %>
</table>